<!DOCTYPE html>
<html lang="en">
<head>
  <title>Table</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .tr{
      width: 10%;
    }
  </style>
</head>
<body>

<div class="container-fluid mt-3">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid">
      <form class="me-4 d-flex">
        <input class="form-control me-2" type="text" placeholder="Search">
        <button class="btn btn-primary" type="button">Search</button>
      </form>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="mynavbar">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link ms-4" href="/employ/list">Employees</a>
          </li>
          <li class="nav-item">
            <a class="nav-link ms-4" href="/depart/list">Department</a>
          </li>
          <li class="nav-item">
            <a class="nav-link ms-4" href="/desig/list">Designation</a>
          </li>
          <li class="nav-item">
            <a class="nav-link ms-4" href="javascript:void(0)">Home</a>
          </li>
        </ul>
        <a class="navbar-brand" href="#">
          <img src="https://modernschoolec.com/assets/img/internal/about-banner-2.jpg" alt="Avatar Logo" style="width:40px;" class="rounded-pill"> 
        </a>
        <a class="navbar-brand" href="javascript:void(0)">Username</a>
      </div>
    </div>
  </nav>

    <table class="mt-5 table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Mobile</th>
            <th scope="col">Email</th>
            <th scope="col">Image</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          
            <% datauser.map((val)=>{ %>
              <tr>
                <td><%= val.id %></td>
                <td><%= val.name %></td>
                <td><%= val.mobile %></td>
                <td><%= val.email %></td>
                <td><img src="/images/<%= val.image %>" alt="<%= val.image %>" width="150px" height="100px"></td>
                <td><button><a href="/employ/update/<%= val._id %>">Edit</a></button></td>
                <td><button><a href="/employ/delete/<%= val._id %>">Delete</a></button></td>
                <td><button><a href="/employ/user/<%= val._id %>">details</a></button></td>
              </tr>
            <%}); %>

        </tbody>
      </table>
</div>

</body>
</html>
