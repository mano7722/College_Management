<div class="container mt-3">
  <h2 class="text-center">Sign Up</h2>
  <form action="/employ/store" method="POST" enctype="multipart/form-data">

    <div class="mb-3 mt-3">
      <label for="id">Id:</label>
      <input type="number" class="form-control" id="id" placeholder="Enter Id" name="id">
    </div>

    <div class="mb-3 mt-3">
      <label for="name">Name:</label>
      <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name">
    </div>

    <div class="mb-3 mt-3">
      <label for="gender">Gender:</label>
      <div class="w-75 d-flex justify-content-between">

        <div class="w-25 d-flex justify-content-evenly">
          <p class="rad">male</p><input type="radio" id="gender" name="gender">
        </div>
        <div class="w-25 d-flex justify-content-evenly">
          <p class="rad">female</p><input type="radio" id="gender" name="gender">
        </div>
        <div class="w-25 d-flex justify-content-evenly">
          <p class="rad">others</p><input type="radio" id="gender" name="gender">
        </div>

      </div>
    </div>

    <div class="mb-3 mt-3">
      <label for="dob">Date Of Birth:</label>
      <input type="date" class="form-control" id="dob" name="dob">
    </div>

    <div class="mb-3 mt-3">
      <label for="address">Address:</label>
      <input type="text" class="form-control" id="address" placeholder="Enter Address" name="address">
    </div>

    <div class="mb-3 mt-3">
      <label for="mobile">Mobile:</label>
      <input type="tel" class="form-control" id="mobile" placeholder="Enter Mobile" name="mobile">
    </div>
    <div class="mb-3 mt-3">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" placeholder="Enter Email" name="email">
    </div>
    <div class="mb-3 mt-3">
      <label for="depart">Department:</label>
      <input type="text" class="form-control" id="depart" placeholder="Enter Department" name="depart">
    </div>
    <div class="mb-3 mt-3">
      <label for="desig">Designation:</label>
      <input type="text" class="form-control" id="desig" placeholder="Enter Designation" name="desig">
    </div>
    <div class="mb-3 mt-3">
      <label for="doj">Date Of Join:</label>
      <input type="date" class="form-control" id="doj" placeholder="Enter DOJ" name="doj">
    </div>
    <div class="mb-3 mt-3">
      <label for="image">Upload Image:</label>
      <input type="file" class="form-control" id="image" name="image">
    </div>
    <div class="ps mb-3">
      <label for="pswd">Password:</label>
      <input type="password" class="form-control" id="pswd" placeholder="Enter password" name="pswd">
      <div class="psimg">
        <p>sfsf</p>
      </div>
    </div>
    <div class="mb-3">
      <label for="confirmpwd">Confirm Password:</label>
      <input type="password" class="form-control" id="confirmpwd" placeholder="ReEnter password" name="confirmpwd" onchange="validataPassword()">
    </div>

    <button type="submit" class="btn btn-primary">Sign Up</button>
  </form>
</div>
<script>

  function validataPassword(){
    let p1=document.getElementById("pswd").value;
    let p2=document.getElementById("confirmpwd").value;
    if(p1!==p2){
      document.getElementById('confirmpwd').setCustomValidity("Password miss matched");
    }
    else{
      document.getElementById('confirmpwd').setCustomValidity("");
    } 
  }

</script>

